# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# Use 'localhost' when running on host machine (npm run dev)
# Use 'mysql' when running inside Docker container
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=fuwari_db
DATABASE_USER=fuwari_user
DATABASE_PASSWORD=fuwari_password
DATABASE_URL=mysql://fuwari_user:fuwari_password@localhost:3306/fuwari_db

# =====================================================
# NEXTAUTH CONFIGURATION
# =====================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-please-change-this-in-production
AUTH_TRUST_HOST=true

# =====================================================
# GOOGLE OAUTH
# =====================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =====================================================
# STRIPE PAYMENT
# =====================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# =====================================================
# PAYPAY PAYMENT
# =====================================================
PAYPAY_CLIENT_ID=your-paypay-client-id
PAYPAY_CLIENT_SECRET=your-paypay-client-secret
PAYPAY_MERCHANT_ID=your-paypay-merchant-id

# =====================================================
# APPLICATION SETTINGS
# =====================================================
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000