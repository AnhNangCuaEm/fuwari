# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# Use 'localhost' when running on host machine (npm run dev)
# Use 'mysql' when running inside Docker container
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=fuwari_db
DATABASE_USER=fuwari_user
DATABASE_PASSWORD=fuwari_password
DATABASE_URL=mysql://fuwari_user:fuwari_password@localhost:3306/fuwari_db

# =====================================================
# NEXTAUTH CONFIGURATION
# =====================================================
# For development
NEXTAUTH_URL=http://localhost:3000
# For production (replace with your domain)
# NEXTAUTH_URL=https://yourdomain.com

NEXTAUTH_SECRET=your-secret-key-here-please-change-this-in-production
AUTH_TRUST_HOST=true

# =====================================================
# GOOGLE OAUTH
# =====================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =====================================================
# STRIPE PAYMENT
# =====================================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# =====================================================
# PAYPAY PAYMENT
# =====================================================
PAYPAY_CLIENT_ID=your-paypay-client-id
PAYPAY_CLIENT_SECRET=your-paypay-client-secret
PAYPAY_MERCHANT_ID=your-paypay-merchant-id

# =====================================================
# APPLICATION SETTINGS
# =====================================================
NODE_ENV=development
# For development
NEXT_PUBLIC_API_URL=http://localhost:3000
# For production (replace with your domain)  
# NEXT_PUBLIC_API_URL=https://yourdomain.com

# =====================================================
# VERCEL BLOB STORAGE
# =====================================================
# Get this token from Vercel dashboard > Storage > Blob
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your_token_here